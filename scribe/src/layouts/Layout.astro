---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
  </head>
  <body class="min-h-screen bg-gray-950 text-gray-100">
    <slot />
  </body>
</html>
