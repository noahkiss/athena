---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Athena - Capture">
  <main class="flex flex-col items-center justify-center min-h-screen p-4">
    <div class="w-full max-w-2xl">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-light text-gray-400">Capture</h1>
        <a href="/browse" class="text-blue-400 hover:text-blue-300 text-sm">
          Browse &rarr;
        </a>
      </div>

      <form
        id="capture-form"
        hx-post="/api/inbox"
        hx-target="#feedback"
        hx-swap="innerHTML"
        class="space-y-4"
      >
        <textarea
          name="content"
          id="note-input"
          placeholder="What's on your mind?"
          class="w-full h-64 p-4 bg-gray-900 border border-gray-800 rounded-lg
                 text-gray-100 placeholder-gray-600 resize-none
                 focus:outline-none focus:border-gray-700 focus:ring-1 focus:ring-gray-700"
          autofocus
        ></textarea>

        <div class="flex gap-3">
          <button
            type="button"
            id="refine-btn"
            hx-post="/api/refine"
            hx-target="#suggestions"
            hx-swap="innerHTML"
            hx-include="#note-input"
            class="flex-1 py-3 px-4 bg-gray-800 hover:bg-gray-700 text-gray-300 rounded-lg
                   transition-colors"
          >
            Refine
          </button>
          <button
            type="submit"
            class="flex-1 py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg
                   transition-colors font-medium"
          >
            Submit
          </button>
        </div>
      </form>

      <div id="suggestions" class="mt-4 p-3 bg-gray-900 rounded-lg border border-gray-800 min-h-[60px]">
        <p class="text-gray-500 text-sm">Click "Refine" for AI suggestions</p>
      </div>

      <div id="feedback" class="mt-4 text-center"></div>
    </div>
  </main>
</Layout>

<script>
  document.body.addEventListener('htmx:afterRequest', (event) => {
    if (event.detail.successful) {
      const textarea = document.getElementById('note-input');
      if (textarea) {
        textarea.value = '';
      }
    }
  });
</script>
